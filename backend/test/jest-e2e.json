{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": ["ts-jest", {
      "tsconfig": "test/tsconfig.e2e.json",
      "isolatedModules": false,
      "diagnostics": {
        "ignoreCodes": [151002]
      }
    }]
  },
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "modulePaths": ["<rootDir>"],
  "testMatch": ["**/test/**/*.e2e-spec.ts"]
}
